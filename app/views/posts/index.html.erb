<p id="notice"><%= notice %></p>

<%= render 'form', post: @new_post %>
<h1>Posts</h1>

<% @posts.each do |p|%>
	<div class="row text">
		<div class="col-md-8 mx-auto">
	<div class="card">
	<%= image_tag p.image.url(:square), class: "card-img-top" %>
	<div class="card-body">
  <p  class= "card-title"><%= p.caption %></p>
  <%= link_to 'Edit', edit_post_path(p) %>
  <%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
	</div>
	</div>
	</div>
	<hr>
	<% end %>
  <%= will_paginate @posts, renderer: WillPaginateInfinite::InfinitePagination %>

<br>


